            <div class="dropdown-menu" aria-labelledby="settings2">
              <a class="dropdown-item" href="/settings/docusign">DocuSign Connection</a>
            </div>
          </li>
        </ul>

        <% if (locals.user) { %>
          <span class="navbar-text">
            Welcome <%= locals.user.username %>
          </span>
        <% } %>

      </div>
